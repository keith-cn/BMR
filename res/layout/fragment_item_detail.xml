<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffeeefef"
        android:scrollbars="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/detail_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
        		android:textStyle="bold"
                android:text="@string/date" />

            <TextView
                android:id="@+id/detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_alignBaseline="@+id/detail_date_textview"
                android:layout_alignBottom="@+id/detail_date_textview"
                android:text="@string/select_date" />

            <TextView
                android:id="@+id/detail_symptom_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date_textview"
                android:layout_below="@+id/detail_date"
                android:layout_marginTop="20dp"
        		android:textStyle="bold"
                android:text="@string/symptom_name" />

            <TextView
                android:id="@+id/detail_symptom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date"
                android:layout_alignBottom="@+id/detail_symptom_name_textview"
                android:layout_toRightOf="@+id/detail_symptom_name_textview"
                android:ems="10" />

            <TextView
                android:id="@+id/detail_temperature_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date_textview"
                android:layout_below="@+id/detail_symptom_name"
                android:layout_marginTop="20dp"
        		android:textStyle="bold"
                android:text="@string/temperature" />

            <TextView
                android:id="@+id/detail_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date"
                android:layout_alignBottom="@+id/detail_temperature_textview"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date_textview"
                android:layout_below="@+id/detail_temperature"
                android:layout_marginTop="20dp"
        		android:textStyle="bold"
                android:text="@string/hospital" />

            <TextView
                android:id="@+id/detail_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date"
                android:layout_alignBottom="@+id/textView4"
                android:ems="10" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date_textview"
                android:layout_below="@+id/detail_hospital"
                android:layout_marginTop="20dp"
        		android:textStyle="bold"
                android:text="@string/doctor" />

            <TextView
                android:id="@+id/detail_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date"
                android:layout_alignBottom="@+id/textView5"
                android:ems="10" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date_textview"
                android:layout_below="@+id/detail_doctor"
                android:layout_marginTop="20dp"
        		android:textStyle="bold"
                android:text="@string/cost" />

            <TextView
                android:id="@+id/detail_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date"
                android:layout_alignBottom="@+id/textView6"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date_textview"
                android:layout_below="@+id/detail_cost"
                android:layout_marginTop="20dp"
        		android:textStyle="bold"
                android:text="@string/medicine" />

            <TextView
                android:id="@+id/detail_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date"
                android:layout_alignBottom="@+id/textView7"
                android:ems="10" />
            
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date_textview"
                android:layout_below="@+id/detail_medicine"
                android:layout_marginTop="20dp"
        		android:textStyle="bold"
                android:text="@string/diagnosis" />

            <TextView
                android:id="@+id/detail_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date"
                android:layout_alignBottom="@+id/textView8"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date_textview"
                android:layout_below="@+id/detail_diagnosis"
                android:layout_marginTop="20dp"
        		android:textStyle="bold"
                android:text="@string/others" />

            <TextView
                android:id="@+id/detail_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail_date"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:ems="10" />

            <Button
                android:id="@+id/details_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_others"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
        		android:textStyle="bold"
                android:text="@string/delete" />

        </RelativeLayout>

    </ScrollView>
</LinearLayout>