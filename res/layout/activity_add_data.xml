<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffeeefef"
        android:scrollbars="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/date" />

            <Button
                android:id="@+id/date_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:text="@string/select_date" />
            
            <requestFocus />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/date_btn"
                android:layout_marginTop="25dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name" />

            <EditText
                android:id="@+id/symptom_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/date_btn"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:ems="10" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/symptom_name_edit"
                android:layout_marginTop="25dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/temperature" />

            <EditText
                android:id="@+id/temperature_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignLeft="@+id/date_btn"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/temperature_edit"
                android:layout_marginTop="25dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/hospital" />

            <EditText
                android:id="@+id/hospital_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/date_btn"
                android:layout_alignBottom="@+id/textView4"
                android:ems="10" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/hospital_edit"
                android:layout_marginTop="25dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/doctor" />

            <EditText
                android:id="@+id/doctor_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/date_btn"
                android:layout_alignBottom="@+id/textView5"
                android:ems="10" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/doctor_edit"
                android:layout_marginTop="25dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/cost" />

            <EditText
                android:id="@+id/cost_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/date_btn"
                android:layout_alignBottom="@+id/textView6"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/cost_edit"
                android:layout_marginTop="25dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/medicine" />

            <EditText
                android:id="@+id/medicine_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/date_btn"
                android:layout_alignBottom="@+id/textView7"
                android:ems="10" />
            
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/medicine_edit"
                android:layout_marginTop="25dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/diagnosis" />

            <EditText
                android:id="@+id/diagnosis_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/date_btn"
                android:layout_alignBottom="@+id/textView8"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/diagnosis_edit"
                android:layout_marginTop="25dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/others" />

            <EditText
                android:id="@+id/others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/date_btn"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:ems="10" />

            <Button
                android:id="@+id/add_data_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/others"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
        		android:textStyle="bold"
        		android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@android:string/ok" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>