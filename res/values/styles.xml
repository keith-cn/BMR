<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
        
    <style name="NavPage">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/navpage</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    
    <style name="BMREditText">
        <item name="android:textSize">@dimen/BasicTextSize</item>
        <item name="android:textColorHint">@color/lightgrey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bmr_edit</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">43.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="BMRLineEditText" parent="@style/BMREditText">
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="BMRLineEditPass" parent="@style/BMRLineEditText">
        <item name="android:password">true</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
    <style name="MMButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/bmr_btn_text</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>
    <style name="HyperText" parent="@style/MMButton">
        <item name="android:textSize">@dimen/BasicTextSize</item>
        <item name="android:textColor">@color/bmr_hyper_text</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RegUIHyperText" parent="@style/HyperText">
        <item name="android:paddingLeft">7.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">50.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:minHeight">20.0dip</item>
    </style>
    <style name="MMLabelSplit">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">10.0dip</item>
        <item name="android:layout_height">13.0dip</item>
    </style>
    <style name="MMBlock">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="dashboard_item_chart">
        <item name="android:layout_width">130.0dip</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:layout_marginLeft">32.0dip</item>
    </style>
    <style name="dashboard__item_icon">
        <item name="android:layout_width">10.0dip</item>
        <item name="android:layout_height">10.0dip</item>
        <item name="android:layout_marginLeft">17.0dip</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="dashboard_item_title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
    </style>
    <style name="dashboard_item_icon_day">
        <item name="android:layout_width">20.0dip</item>
        <item name="android:layout_height">25.0dip</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="dashboard_item_number_today" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ff51bcbf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:textScaleX">0.8</item>
    </style>
    <style name="dashboard_item_number_yesterday" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ffc2c6ca</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:textScaleX">0.8</item>
    </style>
    <style name="table_title_textview">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ffefefef</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    
</resources>
